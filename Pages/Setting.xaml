<Page x:Class="DnsSnap.Pages.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnsSnap.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="265" d:DesignWidth="200"
      Title="Setting">

    <Grid>
        <Button x:Name="ManageBtn" Click="ManageBtn_Click" Content="Manage Dns" HorizontalAlignment="Center" Margin="0,13,0,0" VerticalAlignment="Top" Style="{DynamicResource ButtonStyle}" Width="198" Height="42" />
        <Button x:Name="OpenMinisBtn" Click="OpenMinisBtn_Click" Content="Tray Icon Setting" HorizontalAlignment="Center" Margin="0,73,0,0" VerticalAlignment="Top" Style="{DynamicResource ButtonStyle}" Width="198" Height="43" />
        <Button x:Name="Customize" Click="Customize_Click" Content="Customize" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{DynamicResource ButtonStyle}" Width="198" Margin="0,135,0,0" Height="43" />
        <Button x:Name="GetDnsBtn" Click="GetDnsBtn_Click" Content="Restore Dns" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{DynamicResource ButtonStyle}" Width="198" Margin="0,198,0,0" Height="43" />

    </Grid>
</Page>
